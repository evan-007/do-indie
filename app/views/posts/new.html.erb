<%= form_for @post do |f| %>
<%= f.label :title %>
<%= f.text_field :title, class: "form-control half" %><br />
<%= f.label :en_body %>
<%= f.cktext_area :en_body, class: "form-control half" %><br />
<%= f.label :ko_body %>
<%= f.cktext_area :ko_body, class: "form-control half" %><br />
<%= f.label "URL" %>
<%= f.text_field :short_title, placeholder: "something-like-this", class: "form-control half" %><br />
<%= f.label :published %>
<%= f.select(:published, options_for_select([['no', false],['yes', true]])) %><br />
<%= f.submit %>
<% end %>