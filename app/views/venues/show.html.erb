<h2><%= @venue.name %></h2>
<h4><%= @venue.korean_name %></h4>
<div class="row">
  <div class="col-md-6">
    <% unless @venue.twitter.blank? %>
      <p><%= t(:twitter_feed) %></p>
      <ul>
        <% twitter_client.user_timeline("#{@tweet_url}").take(3).each do |tweet| %>
          <li><%= tweet.text.html_safe %></li>
        <% end %>
      </ul>
    <% end %>
    <% unless @venue.small_map.blank? %>
	    <%= image_tag @venue.small_map %>
    <% end %>
  </div>
  <div class="col-md-6">
    <%= image_tag @venue.avatar :medium%>
  </div>
</div><!--row-->
<div class="row">
  <div class="col-md-6">
    <% if I18n.locale == :en %>
      <% unless @venue.en_bio.blank? %>
        <p><%= @venue.en_bio.html_safe %></p>
      <% else %>
        <p>Sorry, no bio for this venue yet</p>
      <% end %>
      <h4><%= t(:directions) %></h4>
      <% unless @venue.en_directions.blank? %>
          <p><%= @venue.en_directions.html_safe %></p>
      <% else %>
    <p><%= t(:no_directions)%></p>
      <% end %>
    <% else %>
      <% unless @venue.ko_bio.blank? %>
        <p><%= @venue.ko_bio.html_safe %></p>
      <% else %>
        <p><%= t(:no_ko_bio) %></p>
          <% unless @venue.en_bio.blank? %>
            <p><%= @venue.en_bio.html_safe %></p>
          <% end %>
      <% end %>
      <h4><%= t(:directions) %></h4>
      <% unless @venue.ko_directions.blank? %>
        <p><%= @venue.ko_directions.html_safe %></p>
      <% else %>
    <p><%= t(:no_directions) %></p>
      <% end %>
    <% end %>
    
    <% unless @venue.phone == nil %>
      <p><%= t(:venue_phone) %> <%= @venue.phone %></p>
    <% end %>

    <% unless @venue.email == nil %>
      <p><%= t(:venue_email) %> <%= @venue.email %></p>
    <% end %>

    <% unless @venue.address == nil %>
      <p><%= t(:venue_address) %> <%= @venue.address %></p>
    <% end %>

    <% unless @venue.facebook == nil %>
      <p><%= t(:facebook) %> <%= link_to @venue.facebook, @venue.facebook %></p>
    <% end %>

    <% unless @venue.twitter == nil %>
      <p><%= t(:twitter) %> <%= link_to @venue.twitter, @venue.twitter %></p>
    <% end %>

    <% unless @venue.website == nil %>
      <p><%= t(:website) %> <%= link_to @venue.website, @venue.website %></p>
    <% end %>

    <% unless @venue.cafe == nil %>
      <p><%= t(:cafe) %> <%= link_to @venue.cafe, @venue.cafe %></p>
    <% end %>
  </div>
  
  <div class="col-md-6">
    <div style='width: 100%;'>
	    <div id="map" style='width: 100%; height: 400px;'></div>
    </div>
  </div>
</div><!--row-->
<div class="row">
  <div class="col-md-12">
    <% unless Event.upcoming.approved.where(venue_id: @venue.id).blank? %>
    <p><%= t(:next_events) %></p>
      <% Event.where(venue_id: @venue.id).each do |event| %>
        <%= link_to event.name, event_path(event) %><br />
      <% end %>
    <% end %>
  </div>
</div>



<% unless @venue.latitude.blank? %>
<script type="text/javascript">
	handler = Gmaps.build('Google');
		handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){


			markers = handler.addMarkers(<%=raw @hash.to_json %>);

			handler.bounds.extendWith(markers);
			handler.fitMapToBounds();
			handler.getMap().setZoom(15)
		});
</script>
<% else %>
	<p>We don't have the address for this venue yet!</p>
<% end %>


  <% @venue.venue_cities.each do |venue_city| %>
  <p><%= t(:city) %> <%= link_to "#{venue_city.city.en_name}"+"-"+"#{venue_city.city.ko_name}", city_path(venue_city.city.en_name) %> 
  <% end %>
  </p>


<% if current_user && current_user.venue_managers.where(venue_id: @venue.id).count == 0 %>
	<p><%= link_to t(:manager_request), venue_managers_path(venue_id: @venue.id), method: 'post' %>.</p>
<% elsif current_user && current_user.venue_managers.where(venue_id: @venue.id).count != 0 && current_user.venue_manager?(@venue.id) == true %>
    <p>You're a manager! <%= link_to "Edit this band", edit_venue_path(@venue) %></p>
<% elsif current_user && current_user.venue_managers.where(venue_id: @venue.id).count != 0 %>
    <p><%= t(:pending_approval) %></p>
<% else %>
	<p><%= t(:venue_request) %> <%= t(:login_request) %><p>
<% end %>

<% if current_user && current_user.admin == true %>
  <%= link_to "Edit this venue", edit_venue_path(@venue) %>
<% end %>