<%= form_tag venues_path, method: :get do %>
  <p>
    <%= text_field_tag :query, params[:query], placeholder: "Enter a venue name or city", class: "form-control half" %>
    <%= submit_tag "Search", name: nil, class: "btn btn-primary" %>
  </p>
<% end %>

<div class="row">
	<% @venues.each do |venue| %>
		<div class="col-sm-6 col-md-4">
			<div class="thumbnail">
				<%= image_tag venue.avatar.url(:medium) %>
				
				<div class="caption">
					<h3><%= link_to venue.name, venue_path(venue) %></h3>
					<h4><%= venue.korean_name %></h4>
				    <p><%= venue.area%></p>
				    <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
				</div>
			</div>
		</div>
	<% end %>
</div>

<div class="text-center">
  <p><%= page_entries_info @venues %></p>
  <%= paginate @venues %>
</div>
<div class="text-center">
	<p>Cities:
	<% @cities.each do |city| %>
		<%= link_to city.en_name, city_path(city.en_name) %>
		<% end %>
	</p>
</div>