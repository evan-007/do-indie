<%= form_for @band do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: "Name...", class: "form-control half" %><br />
  <%= f.label :korean_name %>
  <%= f.text_field :korean_name, placeholder: "사랑해...", class: "form-control half" %><br />
  <%= f.label :contact %>
  <%= f.text_field :contact, placeholder: "010-1234-1234", class: "form-control half" %><br />
  <%= f.label :facebook %>
  <%= f.text_field :facebook, placeholder: "facebook.com/yourband", class: "form-control half" %><br />
  <%= f.label :myspace %>
  <%= f.text_field :myspace, placeholder: "myspace.com/yourband", class: "form-control half" %><br />
  <%= f.label :bandcamp %>
  <%= f.text_field :bandcamp, placeholder: "bandcamp.com/yourband", class: "form-control half" %><br />
  <%= f.label :twitter %>
  <%= f.text_field :twitter, placeholder: "twitter.com/yourband", class: "form-control half" %><br />
  <%= f.label :cafe %>
  <%= f.text_field :cafe, placeholder: "naver or daum cafe", class: "form-control half" %><br />
  <%= f.label :itunes %>
  <%= f.text_field :itunes, placeholder: "iTunes or other online store that sells your music", class: "form-control half" %><br />
  <%= f.label :soundcloud %>
  <%= f.text_field :soundcloud, placeholder: "soundcloud.com/yourband", class: "form-control half" %><br />
  <%= f.label :youtube %>
  <%= f.text_field :youtube, placeholder: "Youtube video URL", class: "form-control half" %><br />
  <%= f.label :site %>
  <%= f.text_field :site, placeholder: "band homepage or other misc site", class: "form-control half" %><br />
  <%= f.label "English Bio" %>
  <%= f.text_area :en_bio, class: "form-control half" %><br />
  <%= f.label "Korean Bio" %>
  <%= f.text_area :ko_bio, class: "form-control half" %><br />
  <%= f.label :photo %>
  <%= f.file_field :avatar %>

  <% if @band.genres != nil %><br/ ><br />
    <p>Don't add the same genre twice. This band is already under these genres:</p>
    <% @band.genres.each do |genre| %>
      <%= genre.name %>,
    <% end %><br /><br />
  <% end %>
  <%= label_tag :genre %>
  <%= select_tag(:genre, options_for_select(@genres.collect { |genre| [genre.name, genre.id] }.insert(0, ''))) %><br />
  <p>Genre not listed? Enter it's name in English below:</p>
  <%= label_tag :new_genre %>
  <%= text_field_tag :new_genre %><br />
  <%= f.submit %>
<% end %>