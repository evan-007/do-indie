<div class="row">
  <div class="col-sm-6">
    <h1>
      Edit manager <small><%= "#{@manager.user.username.capitalize} - venue: #{@manager.venue.name}" %></small>
    </h1>
    <p><%= link_to "Back to managers", admin_venue_managers_path %></p>

    <%= form_for [:admin, @manager], :html => { :role => "form" } do |f| %>
    
    <div class="form-group">
      <%= f.label :approved %>
      <div class="row">
        <div class="col-sm-6">
         <%= f.check_box :approved %>   
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-6">
        <%= f.submit "Update manager", class: "btn btn-danger" %>
      </div>
    </div>    
    
    <% end %>

  </div>
</div>