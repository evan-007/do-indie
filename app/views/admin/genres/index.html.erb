<h1>Genres<small>Admin</small></h1>
<p><%= link_to "Back to Admin", admin_root_path %></p>
<p><%= link_to "Add genre", new_admin_genre_path %></p>

<div class="text-center">
  <p><%= page_entries_info @genres %></p>
  <%= paginate @genres %>
</div>

<%= form_tag admin_genres_path, method: 'get', html: {role: "form"} do %>
  <p>
    <%= text_field_tag :search, params[:search], placeholder: "English only :(" %>
    <%= submit_tag "Search", :name => nil, class: "btn btn-sm btn-primary" %>
    <%= link_to "All", admin_genres_path, {class: "btn btn-sm btn-link"} %>
  </p>
<% end %>

<table class="table table-striped">
  <tr>
    <th>Genre ID</th>
    <th>Name</th>
  </tr>
  
  <% @genres.each do |genre| %>
  
  <tr>
    <td><%= genre.id %></td>
    <td><%= link_to genre.name, admin_genre_path(genre) %></td>
  </tr>
  
  <% end %>
  
</table>

<div class="text-center">
  <p><%= page_entries_info @genres %></p>
  <%=  paginate @genres %>
</div>