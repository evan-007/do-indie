<div class="row">
  <div class="col-sm-6">
    <h1>
      Edit band <small><%= "#{@band.name.capitalize} - id: #{@band.id}" %></small>
    </h1>
    <p><%= link_to "Back to bands", admin_bands_path %></p>

    <%= form_for [:admin, @band], :html => { :role => "form" } do |f| %>
    
    <div class="form-group">
      <%= f.label :name %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :name, :autofocus => true, class: "form-control" %>  
        </div>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :korean_name %>
      <div class="row">
        <div class="col-sm-6">      
          <%= f.text_field :korean_name, class: "form-control" %>  
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :contact %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :contact, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :facebook %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :facebook, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :myspace %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :myspace, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :bandcamp %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :bandcamp, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :twitter %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :twitter, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :cafe %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :cafe, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :itunes %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :itunes, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :soundcloud %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :soundcloud, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :youtube %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :youtube, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :site %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :site, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "English Bio" %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_area :en_bio, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "Korean bio" %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_area :ko_bio, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :photo %><br>
      <p>Current image:</p>
      <%= image_tag @band.avatar.url(:thumb) %>
      <p>Images are automatically resized to 300x300, 600x600 and 900x900.
        For best results upload a square photo of at least 900x900 pixels (.jpeg, .jpg, .png).</p>
      <div class="row">
        <div class="col-sm-6">
          <%= f.file_field :avatar, class: "form-control" %>
        </div>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :approved %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.select(:approved, options_for_select([["no", false], ["yes", true]] ), class: "form-control") %>  
        </div>
      </div>
    </div>  

    <div class="row">
      <div class="col-sm-6">
        <%= f.submit "Update band", class: "btn btn-danger" %>
      </div>
    </div>


    
    <% end %>

  </div>
</div>