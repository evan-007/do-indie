<div class="row page-header">
  <div class="col-sm-9">
    <h1 class="page-title pull-left">
      <%= t(:events) %>
    </h1>
    <div class="row events_selector pull-right">
      <div class="col-xs-12 row-fluid">
        <div class="btn-group col-xs-12 row-fluid">
          <%= link_to "Upcoming", events_path, class: 'btn btn-warning active col-xs-6' %>
          <%= link_to "Past", past_events_path, class: 'btn btn-default col-xs-6' %>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
  <div class="col-sm-3 searchform">
    <%= form_tag events_path, method: :get, class: 'form-inline' do %>
    <div>
      <div class="input-group col-xs-12">
      	<%= text_field_tag :query, params[:query], placeholder: "Search", class: "form-control date input-sm" %>
      <span class="input-group-btn">
        <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-search"></i></button>
      </span>
      </div>
    </div>
    <% end %>
  </div>
</div>

<%= render 'shared/events_list', :events => @events %>

<script type="text/javascript">
    $(document).ready(function() {
    $('.date').datepicker();
  })
</script>

