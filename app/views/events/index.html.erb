<div class="row page-header">
  <div class="col-sm-9">
    <h1 class="page-title pull-left">
      <%= t(:events) %>
    </h1>
    <div class="row events_selector pull-right">
      <div class="col-xs-12 row-fluid">
        <div class="btn-group col-xs-12 row-fluid">
          <%= link_to "Upcoming", "javascript:void(0);", class: 'btn btn-warning active col-xs-6' %>
          <%= link_to "Past", past_events_path, class: 'btn btn-default col-xs-6' %>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
  <div class="col-sm-3 searchform">
    <%= form_tag events_path, method: :get, class: 'form-inline' do %>
    <div>
      <div class="input-group col-xs-12">
      	<%= text_field_tag :query, params[:query], placeholder: "Enter an event", class: "form-control  input-sm" %>
      <span class="input-group-btn">
        <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-search"></i></button>
      </span>
      </div>
    </div>
    <% end %>
  </div>
</div>

<div class="row-fluid events-listing">
  <% @events.each do |event| %>
  <% event_color = 1+rand(10) %>
  <div class="col-xs-12 row-fluid event">
    <div class="row-fluid">
      <div class="info col-sm-6 event-color-<%= event_color %>">
        <div class="avatar"><%= image_tag event.avatar.url(:medium) %></div>
        <div class="">
          <h3><%= link_to event.name, event_path(event) %></h3>
          <h4><%= event.date %></h4>
          <% unless event.venue == nil %>
          <h4><%= event.venue.name %></h4>
          <% else %>
          <h4>No venue yet</h4>
          <% end %>  
        </div>
      </div>

      <div class="bands col-sm-6 event-color-<%= event_color %>">
        <% if event.event_bands.count != 0 %>
        <p>These bands are playing:
          <% event.event_bands.each do |eventband| %>
          <%= link_to eventband.band.name, band_path(eventband.band) %>,
          <% end %>
        </p>
        <% else %>
        <p>No bands yet!</p>
        <% end %>
      </div>    
    </div>
  </div>
  <% end %>
</div><!--row-->


