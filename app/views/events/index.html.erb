<div class="row page-header">
  <div class="col-sm-9">
    <h1 class="page-title">
      <%= t(:events) %>
    </h1>
  </div>
  <div class="col-sm-3 searchform">
    <%= form_tag events_path, method: :get, class: 'form-inline' do %>
    <div>
      <div class="input-group">
      	<%= text_field_tag :query, params[:query], placeholder: "Enter an event", class: "form-control  input-sm" %>
      <span class="input-group-btn">
        <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-search"></i></button>
      </span>
      </div>
    </div>
    <% end %>
  </div>
</div>

<p>Here are the upcoming events:</p>
<p><%= link_to "Click here", past_events_path %> for past events.</p>

<div class="row">

	<div id="events-grid" class="col-sm-12">
    <div class="grid-tiles">
			<% @events.each do |event| %>
				<%= div_for(venue, class: "list events-grid-item tile") do %>
					<div class="thumbnail">
						<%= image_tag event.avatar.url(:medium) %>
						
						<div class="caption">
							<h3><%= link_to event.name, event_path(event) %></h3>
							<h4><%= event.date %></h4>
							<% unless event.venue == nil %>
								<h4><%= event.venue.name %></h4>
							<% else %>
								<h4>No venue yet</h4>
							<% end %>
					    	<% if event.event_bands.count != 0 %>
								<p>These bands are playing:
									<% event.event_bands.each do |eventband| %>
										<%= link_to eventband.band.name, band_path(eventband.band) %>, 
								<% end %>
								</p>
							<% else %>
								<p>No bands yet!</p>
							<% end %>
						   
						    <p><a href="#" class="btn btn-primary" role="button">Button</a>
						    </p>
						</div>
					</div>
				<% end %>
			<% end %>
</div>

