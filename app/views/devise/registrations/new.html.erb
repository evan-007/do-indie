<p><%= t(:pre_sign)%></p>
<div class="row">
  <div class="col-sm-6">
    <h1><%= t(:signup) %></h1>
    <%= link_to image_tag('fb-login-button.png'), user_omniauth_authorize_path(:facebook) %>
    <%= link_to image_tag('twitter_signin.png'), user_omniauth_authorize_path(:twitter) %>

    <%= form_for(resource, :as => resource_name, 
    :url => registration_path(resource_name), 
    :html => { :role => "form" }) do |f| %>
    
      <%= devise_error_messages! %>
    
      <div class="form-group">
        <%= f.label t(:username) %>
        <div class="row">
          <div class="col-sm-6">
            <%= f.text_field :username, :autofocus => true, class: "form-control" %>  
          </div>
        </div>
      </div>
    
      <div class="form-group">
        <%= f.label t(:email) %>
        <div class="row">
          <div class="col-sm-6">      
            <%= f.email_field :email, class: "form-control" %>  
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-sm-6">
            <%= f.label t(:password) %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-sm-6">
            <%= f.label t(:password_confirmation) %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      </div>    
      <% end %>
      

      <%= render "devise/shared/links" %>

    </div>
  </div>