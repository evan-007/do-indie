<div class="row">
  <div class="col-sm-6 ">
    <h1><%= t(:signin) %></h1>
    <%= link_to image_tag('fb-login-button.png'), user_omniauth_authorize_path(:facebook) %>
    <%= link_to image_tag('twitter_signin.png'), user_omniauth_authorize_path(:twitter) %>
    <%= form_for(resource, :as => resource_name, 
    :url => session_path(resource_name),
    role: "form") do |f| %>
  
      <div class="form-group">
        <%= f.label t(:username) %>
        <div class="row">
          <div class="col-sm-6">
            <%= f.text_field :username, :autofocus => true, class: "form-control" %>  
          </div>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label t(:password) %>
        <div class="row">
          <div class="col-sm-6">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>
      </div>
  
      

      <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <%= f.check_box :remember_me %> <%= t(:remember) %>
      </div>
      <% end -%>

      <div class="row">
        <div class="col-sm-6">
            <%= f.submit t(:signin), class: "btn btn-primary" %>
        </div>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>