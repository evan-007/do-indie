
<div id="myCarousel" class="royalSlider gp-theme slideshow">
  <% @slides.each do |slide| %>
  
  <div class="slide-1 rsContent">
          
    <img class="rsImg rsMainSlideImage" src="<%= image_path slide.image.url %>">

    <div class="slide-caption rsABlock rsNoDrag" data-fade-effect="false" data-move-effect="left" data-move-offset="300" data-speed="500" data-delay="0" data-easing="easeOutSine">
      <% unless I18n.locale == :en %>
        <h2 class="link">
          <a href="<%= slide.link %>" title="<%= slide.anchor %>"><%= slide.ko_title %></a>
        </h2>
        <p><%= slide.ko_description %></p>
      <% else %>
        <h2 class="link">
          <a href="<%= slide.link %>" title="<%= slide.anchor %>"><%= slide.en_title %></a>
        </h2>
        <p><%= slide.en_description %></p>
      <% end %> 
    </div><!-- END // slide-caption -->

  </div><!-- END // slide -->
  <% end %>

</div>
